<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="<%= image_path 'favicon.ico' %>">

    <title><%= yield_content(:title) || "Beyond Code" %></title>
    <meta content="<%= yield_content(:title) || "Beyond Code" %>" property="og:title">
    <meta content="<%= yield_content(:description) || "A Changelog Films Production" %>" property="og:description">
    <meta name="description" content="<%= yield_content(:description) || "A Changelog Films Production" %>">
    <meta content="Beyond Code" property="og:site_name">
    <meta content="https://beyondcode.tv<%= current_page.url %>" property="og:url">
    <meta content="<%= yield_content(:pull_image) || "https://beyondcode.tv#{image_path('share.jpg')}" %>" property="og:image">

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>" data-template="<%= template_name %>">
    <header class="site_header">
      <nav class="site_header-logo">
        <h1><a href="/" title="Beyond Code">Beyond Code</a></h1>
        <h2>A Changelog Films Production</h2>
      </nav>
    </header>

    <%= yield %>

    <%= partial "about" %>

    <!-- Modal Template -->
    <div class="modal">
      <div class="modal-inner">
        <div class="modal-content"></div>
      </div>
    </div>
    <%= javascript_include_tag :all %>
    <script>
      (function(i,s,o,g,r,a,m){i["GoogleAnalyticsObject"]=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,"script","//www.google-analytics.com/analytics.js","ga");

      ga("create", "UA-4556641-24", "auto");
      ga("send", "pageview");
    </script>
  </body>
</html>
